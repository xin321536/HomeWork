<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    android:orientation="vertical"
    tools:context=".fragment.CUFragment">

    <RelativeLayout
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/y122"
        android:background="#ffffff">

        <TextView
            android:layout_width="150px"
            android:layout_height="40px"
            android:layout_marginLeft="@dimen/x304"
            android:layout_marginTop="@dimen/y64"
            android:layout_marginRight="@dimen/x304"
            android:text="课程列表"
            android:textSize="36px" />

        <ImageView
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="@dimen/x681"
            android:layout_marginTop="@dimen/y62"
            android:src="@mipmap/ic_interactive_user_list_on" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/y100">

        <Button
            android:id="@+id/Classification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分类" />

        <Button
            android:id="@+id/Sorting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="排序" />

        <Button
            android:id="@+id/Screening"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="筛选" />
    </LinearLayout>
</LinearLayout>